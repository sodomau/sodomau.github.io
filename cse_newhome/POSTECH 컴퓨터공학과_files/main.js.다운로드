jQuery(document).ready(function($) {
var slide_play = 1;
slide_time = 6*1000;
/*main top*/
var main_top_slide = $('.main_slide_bx .slide_box').flexslider({
	animation: "fade",
	directionNav: false,
	controlNav: false,
	pauseOnHover: false,
	slideshow: false,
	slideshowSpeed : slide_time, 
	//manualControls: ".main_topbx .slide_controlbx .slide_paging li",
	namespace : '',
	start: function(slider) {
        if (slide_play == 1) {
        	slider.play();
        }
		$('.main_slide_bx .slide_bullet .icon_btn a').click(function(){
			
			var this_action = $(this).attr('class');
			$(this).addClass('active').siblings('a').removeClass('active');
			
			if (this_action == 'play') {
				slider.play();slide_play = 1;
			}else{
				slider.stop();slide_play = 0;
			}
		});
		$('.main_slide_bx .slide_bullet .arrowbtn a.prev' ).on('click', function(){
			slider.flexslider('prev');
			if(slide_play == 1){
				slider.play();
			}
			return false;
		});
		//다음 버튼을 클릭하면 다음 슬라이드로 전환
		$('.main_slide_bx .slide_bullet .arrowbtn a.last' ).on('click', function(){
			slider.flexslider('next');
			if(slide_play == 1){
				slider.play();
			}
			return false;
		});
    },
    after : function(slider){
		var active_rel = $('.main_slide_bx .slide_box ul.slides').find('.active-slide').attr('rel');
		$('.main_slide_bx .slide_bullet .number span.no').html(active_rel);
	
	}
});

$('#mail_apply_btn').click(function(){
	$('.popup_box.main').addClass('active');
});
$('.popup_box.main .wrapper .close_btn').click(function(){
	$('.popup_box.main').removeClass('active');
});

var email_input_check = 0;
//이메일 수신 신청
$('#mail_app_frm').submit(function(){
	var params = jQuery("#mail_app_frm").serialize();
	
	if(email_input_check == 1){
		return false;
	}
	email_input_check = 1;
	try{
		jQuery.ajax({
			url: ajax_obj.admin_ajax,
			type: 'post',
			data: params,
			dataType: 'json',
			beforeSend : function( xhr ) {
			},
		}).done(function( response ) {
			alert(response.msg);
			if(response.code == 1){
				$('input[name="user_name"]').val('');
				$('input[name="user_num"]').val('');
				$('input[name="user_email"]').val('');
				$('.popup_box.main').removeClass('active');
			}else if(response.focus){
				$('#'+response.focus).focus();
			}
			email_input_check = 0;
		});
	}catch(e){
		alert(e + '\n관리자에게 문의 하세요.');
		email_input_check = 0;
	}
	
	return false;
});


$(window).load(function(){
var slide_banner_play = true;
slide_time = 5*1000;
/*footer post*/
var banner_slide = $('.banner_slide_con .banner_slidebx').flexslider({
	animation: "fade",
	directionNav: false,
	pauseOnHover: false,
	eventType: "mouseover touchend MSPointerUp",
	slideshow: true,
	slideshowSpeed : slide_time, 
	manualControls: ".banner_slide_con .slide_nav ul li",
	namespace : '',
	start: function(slider) {
    }, 
});
});

var main_research_slide = $('.max_container .main_research_slide').flexslider({
	animation: "slide",
	directionNav: false,
	pauseOnHover: false,
	eventType: "mouseover touchend MSPointerUp",
	slideshow: true,
	controlNav : false,
	itemWidth: 279,
    itemMargin: 0,
	maxItems: 2,
	minItems: 1,
	slideshowSpeed : 6000, 
	namespace : '',
	start: function(slider) {
		$('.max_container .main_research_slide .h_slide_btn a.prev_btn' ).on('click', function(){
			main_research_slide.flexslider('prev');
			return false;
		});
		//다음 버튼을 클릭하면 다음 슬라이드로 전환
		$('.max_container .main_research_slide .h_slide_btn  a.next_btn' ).on('click', function(){
			main_research_slide.flexslider('next');
			return false;
		});
    },
});


});